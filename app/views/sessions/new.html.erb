<% provide(:title, "Sign in") %>

<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
	  <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Sign In</div>
		  </div>
      <div style="padding-top:30px" class="panel-body" >		
				<%= form_for(:session, url: sessions_path, :html => { id: "loginform", class: "form-horizontal", role: "form"}) do |f| %>
					 <%= f.text_field :email, placeholder: "Email", class: "form-control", autofocus: true %>
					 <br   />
					 <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
					 <br   />
					 <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>	
					 <br   />								
	         <div class="form-group">
	             <div class="col-md-12 control">
	                 <div style="border-top: 1px solid#888; padding-top:15px; font-size:90%" >
										 <%= link_to "Need help?", help_path, class: "pull-right need-help" %>
	 				        <%= link_to "New user?", signup_path, class: "pull-left new-account" %>
	 								</div>
	 				    </div>
	 				</div>
	      <% end %>
      </div>       
    </div>
	</div>
</div>