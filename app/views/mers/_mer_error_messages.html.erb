<% if @mer.errors.any? %>
  <div id="error_explanation">
	  <div class="alert alert-error">
		   The form contains <%= pluralize(@mer.errors.count, "error") %>.
  </div>
	<ul>
    <% @mer.errors.messages.values.each do |msg| %>
	    <%msg.each do  |m| %>
		    <li><%= m %></li>
			<%end %>
	  <% end %>
  </ul>
	</div>
<% end %> 